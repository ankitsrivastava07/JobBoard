<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>JobPortal</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>users.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>JobServlet</servlet-name>
    <servlet-class>jobs.JobServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <servlet-class>users.servlet.UpdateProfileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegistrationServlet</servlet-name>
    <servlet-class>users.servlet.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JobServlet</servlet-name>
    <url-pattern>/jobs</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <url-pattern>/update-profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EmployerAuthFilter</filter-name>
    <filter-class>users.filter.EmployerAuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EmployerAuthFilter</filter-name>
    <url-pattern>/jobs/*</url-pattern>
  </filter-mapping>
</web-app>